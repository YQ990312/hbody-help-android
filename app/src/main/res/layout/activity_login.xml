<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.LoginActivity">
    <ImageView
        android:id="@+id/login_main_image"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/little"/>
    <LinearLayout
        android:id="@+id/login_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/login_hello_text"
            android:layout_marginTop="90dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Login"/>
        <TextView
            android:id="@+id/login_real_name_text"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="30dp"
            android:gravity="center"
            android:textStyle="normal"
            android:textSize="15dp"
            android:text="Access Account"/>
        <LinearLayout
            android:id="@+id/login_type"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/shape_corner">
                    <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@color/transparent"
                        android:src="@drawable/wechat"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_corner"
                    android:gravity="center">

                    <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@color/transparent"
                        android:src="@drawable/qq" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/login_account_text"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Or Login With Account"/>
            <TextView
                android:id="@+id/login_input_account_text"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:text="Account"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <EditText
                    android:background="@drawable/shape_corner_login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"/>
            </LinearLayout>
            <TextView
                android:id="@+id/login_input_password_text"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:text="Password"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <EditText
                    android:background="@drawable/shape_corner_login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textVisiblePassword"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical">
            <Button
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/shape_corner_login_button"
                android:gravity="center"
                android:text="Sign in"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="30dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:gravity="center_vertical|right"
                    android:text="Don`t have a account?"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/login_input_registered_text"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:textColor="@color/registered"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:textSize="12dp"
                    android:gravity="center_vertical"
                    android:text="To registered"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>